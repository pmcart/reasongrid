# Railway Environment Variables
# Set these in Railway dashboard → Service → Variables

# Database (auto-set by Railway Postgres plugin)
DATABASE_URL="postgresql://..."

# Authentication
JWT_SECRET="generate-a-strong-random-secret-here"
JWT_EXPIRY="8h"

# Application
NODE_ENV="production"
PORT=3000

# CORS (must match your frontend domain)
CORS_ORIGIN="https://app.reasongrid.io"

# Seed user (only needed for first seed run)
ADMIN_EMAIL="admin@cdi.local"
ADMIN_PASSWORD="change-this-in-production"
